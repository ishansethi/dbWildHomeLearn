@model IEnumerable<HomeWildLearn.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('../Content/images/koalas.jpg')">
        <div class="container">
            <div class="row align-items-center ">
                <div class="col-md-5 mt-5 pt-5">
                    <span class="text-cursive h2 text-red">Welcome To Wild-HomeLearn</span>
                    <p><a href="#" class="text-yellow">What's New? </a></p>
                    <p><a href="#" class="text-white">Home</a> <span class="mx-0">/</span> <strong>What's New? </strong></p>
                </div>
            </div>
        </div>
    </div>
</div>





<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Wild Blogs
                    <small>written by our wonderful wild kids</small>
                    
                    <p style="text-align:right"><a href="@Url.Action("Create", "Blogs")" class="btn btn-primary btn-custom-1 mt-4"><i class="fa fa-pencil" aria-hidden="true"></i> Want to write your own blog?</a></p>                    
                    <hr>
                </h1>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-1">
                    <p>
                        <i class="fa fa-camera fa-4x"></i>
                    </p>
                    <p>@Html.DisplayFor(modelItem => item.Published_Date)</p>
                </div>
                <div class="col-md-5">
                    <a href="#">
                        <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.Blog_Image)">
                        
                    </a>
                </div>
                <div class="col-md-6">
                    <h3>
                        <a href="#">@Html.DisplayFor(modelItem => item.Title)</a>
                    </h3>
                    <p>
                        by <a href="#">@Html.DisplayFor(modelItem => item.Published_By)</a>
                    </p>
                    <p>@Html.DisplayFor(modelItem => item.Blog_Content)</p>
                </div>
            </div>
            <hr>
        }
            
        </div>
</div>