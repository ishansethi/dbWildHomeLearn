        /** Total score pie chart**/
        function totalPieChart(_upto, _cir_progress_id, _correct, _incorrect) {

            $("#" + _cir_progress_id).find("._text_incor").html("Incorrect : " + _incorrect);
            $("#" + _cir_progress_id).find("._text_cor").html("Correct : " + _correct);

