                    <p class="card-text">Mammal</p>
                    <div class="dropdown-divider"></div>
                    <p class="card-text">
                    </p>
                    <a href="#">
                        @Html.ActionLink("More About me!", "Details", new { id = item.animal_id }, new { @class = "btn btn-outline-primary" })
                    </a>
                </div>
            </div>
        }
    </div>
</div>
